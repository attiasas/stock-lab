<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="AAPL" />
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/on_surface_secondary"
            tools:text="Apple Inc." />

        <TextView
            android:id="@+id/detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="$175.50" />
        <TextView
            android:id="@+id/detail_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="+2.5%" />

        <!-- Company overview (sector, industry, market cap, 52W) -->
        <TextView
            android:id="@+id/detail_sector_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:textColor="@color/on_surface_secondary"
            android:visibility="gone"
            tools:text="Sector: Technology | Industry: Consumer Electronics"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/detail_market_cap_pe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/on_surface_secondary"
            android:visibility="gone"
            tools:text="Market cap: 2.8T | P/E: 28.5"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/detail_52w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/on_surface_secondary"
            android:visibility="gone"
            tools:text="52W: $198.23 - $164.08"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:maxLines="5"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="Apple Inc. designs consumer electronics."
            tools:visibility="visible" />

        <!-- Last 5 days -->
        <TextView
            android:id="@+id/label_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Last 5 days"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/detail_daily_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:visibility="gone"
            tools:text="2024-01-15 O:175 H:176 L:174 C:175"
            tools:visibility="visible" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantity"
            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                tools:text="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buy"
                android:layout_marginEnd="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sell"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sell"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/detail_held"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="@color/on_surface_secondary"
            tools:text="You hold: 0 shares" />
    </LinearLayout>
</ScrollView>
